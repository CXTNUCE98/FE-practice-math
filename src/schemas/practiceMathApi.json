            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "answers": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    },
                    "example": [
                      0,
                      1,
                      2,
                      0
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Kết quả bài thi"
          }
        },
        "security": [
          {
            "bearer": []
          }
        ],
        "summary": "Nộp bài thi và tính điểm",
        "tags": [
